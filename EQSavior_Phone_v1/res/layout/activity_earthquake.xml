<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.view.EarthquakeActivity" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text=":"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_infoEQ"
        android:background="#d3d3d3"
        android:gravity="center"
        android:text="Earthquake!"
        android:textSize="10pt" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="18dp"
        android:src="@drawable/dangerous1" />

    <TextView
        android:id="@+id/textView_infoEQ"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_StopAlarm"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:background="#d3d3d3"
        android:gravity="center"
        android:text="Current Status....What we detected from inference...and guideline for survival"
        android:textSize="8pt" />

    <Button
        android:id="@+id/button_noEQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_StopAlarm"
        android:layout_alignLeft="@+id/textView_infoEQ"
        android:layout_toLeftOf="@+id/button_StopAlarm"
        android:background="#000000"
        android:text="Not an Earthquake"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_StopAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView_infoEQ"
        android:text="Stop Alarm" />

</RelativeLayout>